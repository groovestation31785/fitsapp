<%= form_for @message do |f| %>
  <%= f.label 'Send to:' %>
  <%= f.text_field :username %>

  <%= f.label :subject %>
  <%= f.text_field :subject %>

  <%= f.label :content %>
  <%= f.textarea :content %>
  <%= f.hidden_field :sender_id, value: current_user.id %>
  <%= f.hidden_field :receiver_id %>

  <%= f.submit %>
<% end %>
