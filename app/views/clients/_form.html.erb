<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@client) do |f| %>
    <div>
      <%= f.label :name, "Full Name" %>
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>
    <div>
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>
    <div>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div>
      <%= check_box_tag(:trainer) %>
      <%= label_tag(:trainer "I am a trainer") %>
    </div>
    <div>
      <%= f.submit "Create my account", class: "btn btn-primary form_btn" %>
    </div>
    <% end %>
  </div>
</div>
