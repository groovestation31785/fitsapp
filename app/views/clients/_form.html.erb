<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@client) do |f| %>
    <div>
      <%= f.label :name, "Full Name" %>
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>
    <div>
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>
    <div>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div>
      <%= f.label :trainer, "Are you a trainer?" %>
      <%= f.label 'trainer_true', 'Yes' %>
      <%= f.radio_button :trainer, true %>
      <%= f.label 'trainer_false', 'No' %>
      <%= f.radio_button :trainer, false %>
    </div>
    <div>
      <%= f.submit "Create my account", class: "btn btn-primary form_btn" %>
    </div>
    <% end %>
  </div>
</div>
